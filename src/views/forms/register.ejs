<%- include('../partials/head.ejs') %>
    <link href="/styles/register.css" rel="stylesheet">
    

<!-- =========================================================================================================== -->
        
        <!-- -HEADER / ENCABEZADO- -->
        <%- include('../partials/header.ejs') %>

<!-- =========================================================================================================== -->

        <!-- ----LOGIN / ACCESO---- -->
        <main class="main-login">
            
            <section class="main-login_section">

                <div class="main-login_title">
                    <h1>¡Inicia la buena vibra!</h1>
                </div>
                <form action="/users/register" method="POST" class="main-login_form" enctype="multipart/form-data">

                    <div class="main-login_form_box-container one-login">
                        
                        <div class="main-login-form-box-container_title">
                            <h2>CREAR CUENTA</h2>
                        </div>
                        
                        <div class="register-method-change">
                                <i class="fa-brands fa-google-plus-g"></i>
                                <i class="fa-brands fa-square-facebook"></i>
                                <i class="fa-brands fa-apple fa"></i>
                        </div>
                        <% if (locals.errores) {  

                            errores.forEach(error => { %>
                                <p class="error"> <%= error.msg %> </p>
                            <%  }); 
                        }%>
                        
                        <div class="errores">
                            <ul></ul>    
                        </div>
                        
                        <div class="fieldset names">
                            <div class="label">
                                <label for="Nombres"></label>
                            </div>
                                <div class="fa-onda fa-logo">
                                    <img src="/img/svg/simbolequalizer.svg" alt="">
                                </div>
                            <div class="input">                              
                                <input id="user-name" name="name" type="text" placeholder="Nombres" value="<%= locals.old && old.name ? old.name : '' %>">
                            </div>
                        </div>

                        <div class="fieldset last-names">
                            <div class="label">
                                <label for="Apellidos"></label>
                            </div>
                            <div class="fa-onda fa-logo">
                                <img src="/img/svg/simbolequalizer.svg" alt="">
                            </div>
                            <div class="input">
                                <input id="last-name" name="lastName" type="text" placeholder="Apellidos" value="<%= locals.old && old.lastName ? old.lastName : '' %>">
                            </div>
                        </div>
        
                        <div class="fieldset email">    
                            <div class="label">
                                <label for="email"></label>
                            </div>
                            <div class="fa-onda fa-logo">
                                <img src="/img/svg/simbolequalizer.svg" alt="">
                            </div>
                            <div class="input">
                                <input id="e-mail" name="email" type="e-mail" placeholder="E-mail" value="<%= locals.old && old.email ? old.email : '' %>">
                            </div>
                        </div>
                        
                        <div class="fieldset country">
                            
                            <select name="country" id="country" class="fieldset-input estado-producto">
                                <option value="choose">Elegir país</option>
                                <option value="Antigua y Barbuda">Antigua y Barbuda</option>
                                <option value="Argentina">Argentina</option>
                                <option value="Bahamas">Bahamas</option>
                                <option value="Barbados">Barbados</option>
                                <option value="Belice">Belice</option>
                                <option value="Bolivia">Bolivia</option>
                                <option value="Brasil">Brasil</option>
                                <option value="Canada">Canadá</option>
                                <option value="Chile">Chile</option>
                                <option value="Colombia">Colombia</option>
                                <option value="Costa Rica">Costa Rica</option>
                                <option value="Cuba">Cuba</option>
                                <option value="Dominicana">Dominicana</option>
                                <option value="El Salvador">El Salvador</option>
                                <option value="Estados Unidos">Estados Unidos</option>
                                <option value="Granada">Granada</option>
                                <option value="Guatemala">Guatemala</option>
                                <option value="Guyana">Guyana</option>
                                <option value="Haiti">Haití</option>
                                <option value="Honduras">Honduras</option>
                                <option value="Jamaica">Jamaica</option>
                                <option value="Mexico">México</option>
                                <option value="Nicaragua">Nicaragua</option>
                                <option value="Panama">Panamá</option>
                                <option value="Paraguay">Paraguay</option>
                                <option value="Peru">Perú</option>
                                <option value="Republica Dominicana">República Dominicana</option>
                                <option value="San Cristóbal y Nieves">San Cristóbal y Nieves</option>
                                <option value="San Vicente y las Granadinas">San Vicente y la Granadinas</option>
                                <option value="Santa Lucia">Santa Lucía</option>
                                <option value="Surinam">Surinam</option>
                                <option value="Trinidad y Tobago">Trinidad y Tobago</option>
                                <option value="Uruguay">Uruguay</option>
                                <option value="Venezuela">Venezuela</option>
                            </select>

                        </div>
        
                        <div class="fieldset password">
                            <div class="label">
                                <label for="password"></label>
                            </div>
                            <div class="fa-onda fa-logo">
                                <img src="/img/svg/simbolequalizer.svg" alt="">
                            </div>
                            <div class="input">
                                <input id="password" name="password" type="password" placeholder="Contraseña" value="<%= locals.old && old.password ? old.password : '' %>">
                            </div>

                        </div>

                        <div class="fieldset confirm-password">
                            <div class="label">
                                <label for="Confirmar contraseña"></label>
                            </div>
                            <div class="fa-onda fa-logo">
                                <img src="/img/svg/simbolequalizer.svg" alt="">
                            </div>
                            <div class="input">
                            <input id="confirm-password" name="confirm-password" type="password" placeholder="Confirmar contraseña">
                            </div>
                        </div>

                        <div class="fieldset img-profile">
                            <div class="label">
                                <label for="Imagen de Perfil"></label>
                            </div>
                            <div class="fa-onda fa-logo">
                                <img src="/img/svg/simbolequalizer.svg" alt="">
                            </div>
                            <div class="input">
                                <input placeholder="Imgen de Perfil" type="file"  name="imgProfile" class="img-profile">
                            </div>
                        </div>
                        
                        <div class="button crear">
                            <input type="submit" value="Crear">
                        </div>
                            
                    </div>
        
                    <div class="main-login_form_box-container two-login">
                            
                            <article class="paragraph">
                                
                            <div class="img-link-soundBox">
                                <a href="/">
                                    <img id="logo" src="/img/svg/estandar.svg" alt="SoundBox">
                                </a>
                            </div>
                            
                            <div class="text">
                                
                                <p>¿Ya eres parte de SoundBox?</p>
                                
                                <div class="a-crear-cuenta">
                                    <a href="/login">Ingresar</a>
                                </div>
                                
                            </div>
        
                        </article>
                        
                        <div class="button">
        
                            <a href="/users/login">
                                <input type="button" name="" id="" value="Ingresar">
                            </a>
                            
                        </div>
        
                    </div>
                    
                </form>

            </section>
            
        </main>

        <script src="../scripts/forms.js"></script>
<!-- =========================================================================================================== -->
        
        <!-- FOOTER / PIE DE PAGINA -->
        <%- include('../partials/footer.ejs') %>
        
<!-- =========================================================================================================== -->