<!DOCTYPE html>
<html lang="en">
<head>
    <html lang="en">

    <!-- head -->
    <%- include("./partials/head") %>
    <link href="styles/crearProducto.css" rel="stylesheet">
    <!-- /head -->
        
<body>
                
        <!-- Header -->
        <%- include("./partials/header")%>
        <!-- /Header -->

        <main>
            <section class="cards">

                <% products.forEach(product=> { %>
                    <div class="card">
                        <a  class="href-padding" href="/productDetail">
                            <div class="imagen-producto"><img src="<%= product.imagen %>" alt=""></div>
                            <div class="desplegable">
                                <h5>
                                    <%= product.nombre%>
                                </h5>
                            </div>
                            <div class="descripcion-producto">
                                <span>
                                    $ <%= product.precio%>
                                </span>
                                <span class="descuento">
                                    -<%= product.descuento%> %
                                </span>
                            </div>
                            <div class="texto-descriptivo">
                                <p>
                                    <%= product.descripcion%>
                                </p>
                            </div>
                        </a>
                    </div>

                    <%})%>

                    <div class="card add">
                        
                        <a href="/products/create">
    
                            <svg width="230" height="315" viewBox="0 0 230 315" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <g id="ADD">
    
                                    <rect width="230" height="315" fill="#d0d0d0" fill-opacity="100"/>
    
                                    <g id="ICON">
    
                                        <g id="bars-sounds">
    
                                            <path class="bar-vertical" d="M115.247 218C111.293 218 107.971 214.222 107.971 209.724V106.276C107.971 101.778 111.293 98 115.247 98C119.202 98 122.523 101.778 122.523 106.276V209.724C122.681 214.222 119.36 218 115.247 218Z" fill="#FFF8F4" fill-opacity="100"/>
    
                                            <path class="bar-horizontal" d="M175.5 158.003C175.5 161.941 171.706 165.248 167.19 165.248H63.3103C58.7939 165.248 55 161.941 55 158.003C55 154.065 58.7939 150.757 63.3103 150.757H167.19C171.706 150.6 175.5 153.907 175.5 158.003Z" fill="#FFF8F4" fill-opacity="100"/>
    
                                        </g>
                                    </g>
    
                                </g>
                            </svg>

                        </a>

                        
                    </div>

            </section>
        </main>
        
        <!-- Footer -->
        <%- include("./partials/footer") %>
        <!-- /Footer -->
</body>
</html>