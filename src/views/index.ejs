                    </li>
                </ul>  
            </div>
            <div class="items-mas-vendidos">  
                <% masVendidos.forEach(product => { %>
         
                    <article class="producto">
                        <a href="/products/productDetail">
                        <img src=<%= product.imagen %> alt="Imagen">
                        <div class="detalle-producto">
                            <p class="descripciones"><strong><%= product.nombre %></strong></p>
                            <div class="container-detalle">
                                <p class="calificacion">Estrellas</p>
                                <p class="precios">$<%= product.precio %></p>
                            </div>
                        </div>
