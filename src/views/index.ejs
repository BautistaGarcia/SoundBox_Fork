                        </li>
                        <li>
                            <img src="/img/banners/Banner-carrusel4.jpg" id="Banner-image4" alt="">
                        </li>
                        <li>
                            <img src="/img/banners/Banner-carrusel1.jpg" id="Banner-image5" alt="">
                        </li>
                    </ul>

                    <div class="slider-buttons">
                        <div class="grid-items-slider">
                            <a href="#Banner-image1">a</a>
                        </div>
                        <div class="grid-items-slider">
                            <a href="#Banner-image2">a</a>
                        </div>
                        <div class="grid-items-slider">
                            <a href="#Banner-image3">a</a>
                        </div>
                    </div>
                </section>

                <section class="right-menu-container">
                    <section class="right-menu">
                        <div class="right-icons-text">
                            <p>asdasdasd</p>
                        </div>
                        <div class="right-icons">
                            <img src="/img/svg/cajitaSBX.svg" alt="">
                        </div>
                    </section>

                    <section class="right-menu">
                        <div class="right-icons">
                            <i class="fa-regular fa-heart"></i>
                        </div>
                        <div class="right-icons-text">
                            <p>asdasdasd</p>
                        </div>
                    </section>

                    <section class="right-menu go-top-container">
                        <div class="right-icons">
                            <i class="fa-solid fa-arrow-up"></i>
                        </div>
                    </section>
                </section>

                <section class="mas-vendidos" id="section-mas-vendidos">
                    <h3>MÁS VENDIDOS</h3>

                    <div class="items-mas-vendidos">

                        <% masVendidos.forEach(element=> { %>
                            <a href="/products/productDetail/<%= element.id %>" class="product">
                                <img src="/img/products/<%= element.imagen %>" alt="Trompeta">
                                <div class="detalle-producto">
                                    <p class="descripciones"><strong>Plastic Trumpet, White</strong></p>
                                    <div class="container-detalle">
                                        <p class="calificacion">

                                        <form class="formulario-clasificacion">
                                            <p class="clasificacion">
                                                <input id="radio1" type="radio" name="estrellas" value="5"><!--
                                                --><label for="radio1"><i class="fa-solid fa-star"></i></label><!--
                                                --><input id="radio2" type="radio" name="estrellas" value="4"><!--
                                                --><label for="radio2"><i class="fa-solid fa-star"></i></label><!--
                                                --><input id="radio3" type="radio" name="estrellas" value="3"><!--
                                                --><label for="radio3"><i class="fa-solid fa-star"></i></label><!--
                                                --><input id="radio4" type="radio" name="estrellas" value="2"><!--
                                                --><label for="radio4"><i class="fa-solid fa-star"></i></label><!--
                                                --><input id="radio5" type="radio" name="estrellas" value="1"><!--
                                                --><label for="radio5"><i class="fa-solid fa-star"></i></label>
                                            </p>
                                        </form>


                                        </p>
                                        <p class="precios">$ <%= element.precio %>
                                        </p>
                                    </div>
                                </div>
                            </a>

                            <% }); %>

                    </div>
                </section>

                <section class="marcas-banners" id="seccion-marcas-banners">
                    <div class="box-marcas">
                        <div>
                            <img src="/img/banners/bannerMarcas.jpg" width=100%; alt="Marquesina marcas">
                        </div>
                    </div>
                    <div class="box-promoBanners">
                        <div class="promoBanners">
                            <img src="/img/banners/bannerEnvio.jpg" width=100%; alt="Envíos gratis">
                        </div>
                        <div class="promoBanners">
                            <img src="/img/banners/bannerCajita.jpg" width=100%; alt="Envíos gratis">
                        </div>
                        <div class="promoBanners">
                            <img src="/img/banners/bannerMasPromos.jpg" width=100%; alt="Envíos gratis">
                        </div>
                    </div>
                </section>


                <div class="titles-last-section">
                    <span>novedades</span>
                    <span>comentados</span>
                    <span>destacados</span>

                </div>
                <div class="last-section">
                    <% masVendidos.forEach(element=> { %>
                        <a href="/products/productDetail/<%= element.id %>" class="card">
                            <div class="img-container">
                                <img src="/img/productos/Orquesta/Orquesta-1.jpg" alt="">
                            </div>
                            <div class="card-text">
                                <span>
                                    <%= element.nombre %>
                                </span>
                                <p>
                                    <%= element.marca %>
                                </p>
                                <p>
                                    <%= element.precio %>
                                </p>
                            </div>
                        </a>
                        <% }); %>
                            <% masVendidos.forEach(element=> { %>
                                <a href="/products/productDetail/<%= element.id %>" class="card">
                                    <div class="img-container">
                                        <img src="/img/productos/Orquesta/Orquesta-1.jpg" alt="">
                                    </div>
                                    <div class="card-text">
                                        <span>
                                            <%= element.nombre %>
                                        </span>
                                        <p>
                                            <%= element.marca %>
                                        </p>
                                        <p>
                                            <%= element.precio %>
                                        </p>
                                    </div>
                                </a>
                                <% }); %>
                                    <% products.forEach(element=> { %>
                                        <a href="/products/productDetail/<%= element.id %>" class="card">
                                            <div class="img-container">
                                                <img src="/img/productos/Orquesta/Orquesta-1.jpg" alt="">
                                            </div>
                                            <div class="card-text">
                                                <span>
                                                    <%= element.nombre %>
                                                </span>
                                                <p>
                                                    <%= element.marca %>
                                                </p>
                                                <p>
                                                    <%= element.precio %>
                                                </p>
                                            </div>
                                        </a>
                                        <% }); %>
                                        <div class="promo-container">
                                            <img src="img/banners/banner_promo.jpg" alt="">
                                        </div>
                </div>

            </div>

        </main>

