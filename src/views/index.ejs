    <%- include('./partials/header.ejs') %>

        <main class="main">

            <div class="main-center">

                <section class="slider-frame">
                    <ul>
                        <!-- <li>
                            <img src="/img/banners/Banner-carrusel1.jpg" id="Banner-image1" alt="">
                        </li> -->
                        <li class="yt-iframe-container">
                            <!-- quiero entre banner y banner se vea un video de cada instrumento
                                 con la api de youtube usando:-->
                            <iframe width="560" height="315"
                                src="https://www.youtube.com/embed/3uneA-cstZs?si=4yaoLe7hZo7IzrNw&start=10&autoplay=1&controls=0"
                                title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen></iframe>
                            <!-- iframe de yt -->
                        </li>
                        <li>
