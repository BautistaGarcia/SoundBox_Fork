<%- include('./partials/head.ejs') %>

<link href="/styles/reset.css" rel="stylesheet">
<link href="/styles/header-footer.css" rel="stylesheet">
<link href="/styles/productCart.css" rel="stylesheet"> 

<body>
    
    <%- include("./partials/header") %>

        <main>
            <section class="carrito">
                <section class="carrito-container">
                    <section class="contenedor-boton-cajita">
                        <div class="cabecera-carrito">
                            <h4 style="align-self: center; padding: 10px;">
                                Ordenar Carrito
                            </h4>

                            <div class="botonera-ordenar">
                                <div class="botones-ordenador">
                                    <button class="boton"><a href="" style="color: white;"><i
                                                class="fa-solid fa-circle-arrow-up"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-a-z"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-short-wide"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-wide-short"></i></a></button>
                                </div>
                                <div class="labels-ordenador">
                                    <label for="#"> Agregar a Favoritos </label>
                                    <label for="#"> Eliminar Seleccionados </label>
                                </div>
                            </div>
                        </div>
                        <section class="desplegable-ejemplo">
                            <!-- desplegable -->

                            <% instrumentos.forEach(producto=> { %>
                                <div class="card">
                                    <div class="card-checkbox-container">
                                        <input class="card-checkbox" type="checkbox">
                                    </div>
                                    <div class="product-image">
                                        <img src= <%=producto.imagen %> alt="">
                                    </div>
                                    <div class="product-description">
                                        <h2>
                                            <%= producto.nombre + " " + producto.marca %>
                                        </h2>
                                        <div class="card-middle-divisor">
                                            <p class="with-stock">Unidade/s</p>
                                            <div class="card-contador">
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-minus"></i>
                                                    </strong></button>
                                                <input type="number" min="1" max="9000" placeholder="Cantidad" required>
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-plus"></i>
                                                    </strong></button>
                                                <p class="without-stock" style="color: red;">fuera de stock</p>
                                            </div>
                                        </div>
                                        <div class="product-price-discount">
                                            <strong><span class="product-price">
                                                    <%= producto.precio + " $" %>
                                                </span></strong>
                                            <strong>
                                                <h1>
                                                    <%= "-" + producto.descuento + " % OFF" %>
                                                </h1>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="delete-card-button">
                                        <button style="color: white;">Eliminar</button>
                                    </div>
                                </div>
                                <% }); %>
                        </section>

                        <div class="pie-carrito">

                            <div class="tira-pie-carrito">
                                <label class="ordenar-lista-descripcion">Producto</label>
                                <label class="ordenar-lista-descripcion">Descripcion</label>
                                <label class="ordenar-lista-descripcion">Cantidad</label>
                                <label class="ordenar-lista-descripcion">Precio final</label>
                            </div>


                            <div class="carrito-contenedor">
                                <i class="fa-solid fa-cart-arrow-down"></i>
                            </div>
                        </div>
                    </section>







                    <section class="contenedor-boton-favoritos">
                        <div class="cabecera-carrito">
                            <h4 style="align-self: center; padding: 10px;">
                                Ordenar Favoritos
                            </h4>

                            <div class="botonera-ordenar">
                                <div class="botones-ordenador">
                                    <button class="boton"><a href="" style="color: white;"><i
                                                class="fa-solid fa-circle-arrow-up"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-a-z"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-short-wide"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-wide-short"></i></a></button>
                                </div>
                                <div class="labels-ordenador">
                                    <label for="#"> Agregar a Cajita </label>
                                    <label for="#"> Eliminar Seleccionados </label>
                                </div>
                            </div>
                        </div>

                        <section class="desplegable-ejemplo">
                            <!-- desplegable -->
                            <% instrumentos.forEach(producto=> { %>
                                <div class="card">
                                    <div class="card-checkbox-container">
                                        <input class="card-checkbox" type="checkbox">
                                    </div>
                                    <div class="product-image">
                                        <img src=<%=producto.imagen %> alt="">
                                    </div>
                                    <div class="product-description">
                                        <h2>
                                            <%= producto.nombre + " " + producto.marca %>
                                        </h2>
                                        <div class="card-middle-divisor">
                                            <p class="with-stock">Unidade/s</p>
                                            <div class="card-contador">
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-minus"></i>
                                                    </strong></button>
                                                <input type="number" min="1" max="9000" placeholder="Cantidad" required>
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-plus"></i>
                                                    </strong></button>
                                                <p class="without-stock" style="color: red;">fuera de stock</p>
                                            </div>
                                        </div>
                                        <div class="product-price-discount">
                                            <strong><span class="product-price">
                                                    <%= producto.precio + " $" %>
                                                </span></strong>
                                            <strong>
                                                <h1>
                                                    <%= "-" + producto.descuento + " % OFF" %>
                                                </h1>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="delete-card-button">
                                        <button style="color: white;">Eliminar</button>
                                    </div>
                                </div>
                                <% }); %>
                        </section>

                        <div class="pie-carrito">

                            <div class="tira-pie-carrito">
                                <label class="ordenar-lista-descripcion">Producto</label>
                                <label class="ordenar-lista-descripcion">Descripcion</label>
                                <label class="ordenar-lista-descripcion">Cantidad</label>
                                <label class="ordenar-lista-descripcion">Precio final</label>
                            </div>


                            <div class="carrito-contenedor">
                                <i class="fa-solid fa-heart"></i>
                            </div>
                        </div>
                    </section>
                </section>

















                <!--  -->






                <section class="payement-card">
                    <section class="total">
                        <div class="total-amount">
                            <h1>TOTAL:</h1>
                            <h1>2000000$</h1>
                            <input type="text" class="payment-currency-input">
                        </div>

                        <div class="payement-button">
                            <button>PAGAR AHORA</button>
                        </div>
                    </section>


                    <section class="subtotal">
                        <strong class="titulo-subtotal">
                            <h1>Subtotal:</h1>
                        </strong>

                        <div class="subtotal-sumatory">
                            <% instrumentos.forEach(producto=> { %>
                                <div class="product-description-subtotal">
                                    <div class="subtotal-item-cards">
                                        <p>
                                            <%= producto.nombre + "  " + producto.marca %>
                                        </p>
                                        <span>
                                            <%= producto.precio + "  $" %>
                                        </span>
                                    </div>
                                </div>
                                <% }); %>

                                    <h1 class="titulo-subtotal">DESCUENTOS</h1>
                                    <% instrumentos.forEach(producto=> { %>
                                        <div class="product-description-subtotal">
                                            <div class="subtotal-item-cards">
                                                <p>
                                                    <%= producto.nombre + "  " + producto.marca %>
                                                </p>
                                                <p>
                                                    <%= "-" + producto.descuento + "%" %>
                                                </p>
                                                <span>
                                                    <%= producto.precio + "  $" %>
                                                </span>
                                            </div>
                                        </div>
                                        <% }); %>
                        </div>
                    </section>
                </section>

            </section>
            <section class="seccion-carrito-corredor">
                <div class="corredor">
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <div class="image-related">
                        <img src="https://artemusical.com.ar/wp/wp-content/uploads/2019/06/18174_medium.jpg" alt="">
                    </div>
                    <!-- fin del carrusel agregar a carrito -->
                </div>

                <!-- fin del carrusel agregar a carrito -->
                <section class="metodos-pago">
                    <ul style="width: 100%; padding: 0.5rem;">
                        <li>
                            <h2 style="color: white;">metodos de pago:</h2>
                            <a href="">pagos solo con tarjetas:</a>
                            <div class="middle-metodos-pago">
                                <i class="fa-brands fa-cc-visa" style="color: #ffffff;"></i>
                                <i class="fa-brands fa-cc-mastercard" style="color: #ffffff;"></i>
                                <i class="fa-solid fa-credit-card" style="color: #ffffff;"></i>
                                <i class="fa-brands fa-cc-paypal" style="color: #ffffff;"></i>
                            </div>
                            <a href="">o en efectivo en:</a>
                            <div class="middle-metodos-pago">
                                <i class="fa-brands fa-ioxhost" style="color: #ffffff;"></i>
                            </div>
                        </li>
                    </ul>
                </section>
            </section>
            <section class="desplegable-metodos-pago">
                <div class="circular-metodos-pago">
                    <ul>
                        <li>

                        </li>
                    </ul>
                    <div>
                        cerrar seccion
                    </div>
                </div>
            </section>
        </main>


        <%- include("./partials/footer") %>

</body>
