        <main>
            <section class="carrito">
                <section class="carrito-container">
                    <section class="contenedor-boton-cajita">
                        <div class="cabecera-carrito">
                            <h4 style="align-self: center; padding: 10px;">
                                Ordenar Carrito
                            </h4>

                            <div class="botonera-ordenar">
                                <div class="botones-ordenador">
                                    <button class="boton"><a href="" style="color: white;"><i
                                                class="fa-solid fa-circle-arrow-up"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-a-z"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-short-wide"></i></a></button>
                                    <button class="boton"><a href="" style="color: black;"><i
                                                class="fa-solid fa-arrow-down-wide-short"></i></a></button>
                                </div>
                                <div class="labels-ordenador">
                                    <label for="#"> Agregar a Favoritos </label>
                                    <label for="#"> Eliminar Seleccionados </label>
                                </div>
                            </div>
                        </div>
                        <section class="desplegable-ejemplo">
                            <!-- desplegable -->

                            <% instrumentos.forEach(producto=> { %>
                                <div class="card">
                                    <div class="card-checkbox-container">
                                        <input class="card-checkbox" type="checkbox">
                                    </div>
                                    <div class="product-image">
                                        <img src= <%=producto.imagen %> alt="">
                                    </div>
                                    <div class="product-description">
                                        <h2>
                                            <%= producto.nombre + " " + producto.marca %>
                                        </h2>
                                        <div class="card-middle-divisor">
                                            <p class="with-stock">Unidade/s</p>
                                            <div class="card-contador">
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-minus"></i>
                                                    </strong></button>
                                                <input type="number" min="1" max="9000" placeholder="Cantidad" required>
                                                <button class="contador-button"><strong>
                                                        <i class="fa-solid fa-plus"></i>
                                                    </strong></button>
                                                <p class="without-stock" style="color: red;">fuera de stock</p>
                                            </div>
                                        </div>
                                        <div class="product-price-discount">
                                            <strong><span class="product-price">
                                                    <%= producto.precio + " $" %>
                                                </span></strong>
                                            <strong>
                                                <h1>
                                                    <%= "-" + producto.descuento + " % OFF" %>
                                                </h1>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="delete-card-button">
                                        <button style="color: white;">Eliminar</button>
                                    </div>
                                </div>
                                <% }); %>
                        </section>

                        <div class="pie-carrito">

                            <div class="tira-pie-carrito">
                                <label class="ordenar-lista-descripcion">Producto</label>
                                <label class="ordenar-lista-descripcion">Descripcion</label>
                                <label class="ordenar-lista-descripcion">Cantidad</label>
                                <label class="ordenar-lista-descripcion">Precio final</label>
                            </div>


                            <div class="carrito-contenedor">
                                <i class="fa-solid fa-cart-arrow-down"></i>
                            </div>
                        </div>
                    </section>












