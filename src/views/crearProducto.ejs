<!DOCTYPE html>
<html lang="en">

    <!-- head -->
    <%- include("./partials/head") %>
    <link href="styles/crearProducto.css" rel="stylesheet">
    <!-- /head -->
        
    <body>
            
        <!-- HEADER -->
        <%- include("./partials/header")%>
        <!-- /HEADER -->
            
            
        <main>

            <section class="admin-container">
                
                <div class="admin-containe_title">
                    <h1> CREAR PRODUCTO </h1>
                </div>
                
                <section class="contenedor-total">
                    
                    <div class="form-creat-product">

                        <form action="/index" method="POST" enctype="multipart/form-data">
                            
                            <div class="fieldset titulo-producto">
                                <label for="nombre-del-producto">Nombre del producto</label>
                                <input placeholder="Guitarra" type="text" name="nombre-del-producto" class="nombre-form">
                            </div>
                            
                            <div class="fieldset precio">
                                <label for="precio">Precio</label>
                                <input placeholder="Precio" type="number"  name="precio" min="1000" max="9999999" class="precio-form">
                            </div>

                            <div class="fieldset descuento">
                                <label for="descuento">Descuento</label>
                                <input placeholder="Descuento" type="number"  name="descuento" min="5" max="100" class="descuento-form">
                            </div>

                            <div class="fieldset descripcion">
                                <label for="descripcion">Descripcion</label>
                                <textarea name="descripcion" id="" cols="30" rows="10" class="descripcion-form"></textarea>
                            </div>

                            <div class="fieldset colores-disponibles">
                                <label for="colors">Colores disponibles</label>
                                <input placeholder="Gris" type="text" name="colors" class="colors-form">
                            </div>

                            <div class="fieldset cantidad-disponibles">
                                <label for="cantidad-disponible">Cantidad disponibles</label>
                                <input placeholder="Cantidad" type="number"  name="cantidad-disponible" min="1" max="99999" class="cantidad-disponible">
                            </div>

                            <div class="fieldset agregar-categoria">
                                <label for="cantidad-disponible">Categorias</label>
                                <input placeholder="Guitarras, Instrumentos de cuerda" type="text"  name="categoria" class="cantidad-disponible">
                            </div>
                            <div class="imagen-of-product">
                                <label for="image"></label>
                                <input placeholder="Imagen" type="file"  name="image" class="imagen-form">
                            </div>
                                
                                <div class="crear-carta-borrar-carta">

                                    <label for=""></label>
                                    <input type="submit" value="Crear" class="enviar-form">
                                    
                                    <label for=""></label>
                                    <input type="reset" value="Eeliminar" class="borrar-form">

                                </div>

                        </form>

                    </div>

                    <div class="vista-previa">
                            
                        <div class="vista-previa-caja-genera_title">
                                <h1>Vista previa</h1>
                        </div>

                        <div class="caja-general disappear">
                                
                                
                            <div class="caja-imagenes-general">
                                    
                                    <div class="imagen-producto-principal">
                                        <img src="/img/productos/guitarras/guitarra-1.jpg" alt="guitarra1">
                                        <a href="#"> <i class="fa-solid fa-heart"></i> </a>
                                    </div>
                                    
                                    <div class="imagenes-secundarias-inferior">
                                        <img src="/img/productos/guitarras/guitarra-1.jpg" alt="guitarra1" class="imagen-producto-secundaria">
                                        <img src="/img/productos/guitarras/guitarra-1.jpg" alt="guitarra1" class="imagen-producto-secundaria">
                                        <img src="/img/productos/guitarras/guitarra-1.jpg" alt="guitarra1" class="imagen-producto-secundaria">
                                    </div>
                            </div>
                    
                            <div class="caja-sub-general-informacion">

                                
                                <div class="caja-primera">
                                    
                                    <div class="caja-titulo-producto">
                                            
                                            <h2 class="titulo-producto">Nombre del producto</h2>
                                        </div>
                                        
                                        <div class="caja-precio-clasificacion">

                                            <div class="product-price">
                                                <span class="precio-producto"> $Precio? </span>
                                            </div>
                                            
                                            <form class="select-starts">

                                                <div class="starts">
                                                    <p class="clasificacion">
                                                        <input id="radio1" type="radio" name="estrellas" "><!--
                                                        --><label for="radio1"><i class="fa-solid fa-star"></i></label><!--
                                                        --><input id="radio2" type="radio" name="estrellas" "><!--
                                                        --><label for="radio2"><i class="fa-solid fa-star"></i></label><!--
                                                        --><input id="radio3" type="radio" name="estrellas" "><!--
                                                        --><label for="radio3"><i class="fa-solid fa-star"></i></label><!--
                                                        --><input id="radio4" type="radio" name="estrellas" "><!--
                                                        --><label for="radio4"><i class="fa-solid fa-star"></i></label><!--
                                                        --><input id="radio5" type="radio" name="estrellas" "><!--
                                                        --><label for="radio5"><i class="fa-solid fa-star"></i></label>
                                                    </p>
                                                </div>

                                            </form>

                                        </div>
                        
                                    </div>
                        
                                    <div class="caja-segunda">

                                        <div class="caja-descripcion-producto">

                                            <p class="descripcion-producto">
                                                Lorem ipsum dolor sit amet consectetur, adipisicing elit. Minima ab voluptatem nisi, blanditiis iste harum perspiciatis nulla numquam recusandae fugiat perferendis labore tenetur laudantium culpa ipsam fugit corrupti quaerat sed quisquam minus, quasi pariatur, repellendus consequatur.
                                            </p>

                                        </div>
                        
                                        <div class="caja-colores-producto">

                                            <span class="texto-color">Color</span>
                                            
                                            <div class="caja-seleccion-colores">
                                                <form action="">
                                                   <select name="color" id="color">

                                                    <%array.forEach(color => {%>
                                                        <option value="color"><%= %></option>
                                                    <%});%>

                                                   </select>
                                                </form>
                                            </div>

                                        </div>

                                    </div>
                        
                                    <div class="caja-cantidad-producto-carrito">

                                        <div class="caja-cantidad-producto">
                                                <input type="number" id="cantidad-seleccion" min="1" max="100" ">
                                        </div>
                        
                                        <div class="caja-botones-cantidad-producto">
                                                <i class="fa-solid fa-caret-up"></i>
                                                <i class="fa-solid fa-caret-down"></i>
                                        </div>
                        
                                        <div class="caja-agregar-carrito">

                                                <form action="" class="formulario-boton-agregar-carrito">
                                                    <button type="submit" class="boton-agregar-carrito"><i class="fa-solid fa-cart-shopping"></i> <span class="texto-boton-agregar-carrito">ADD</span></button>
                                                </form>

                                        </div>

                                    </div>
                                        
                                    <div class="caja-links-extra-producto">

                                        <div class="caja-categorias-producto">
                                            <span class="links-categorias-producto">Categories:
                                                <a href="#">Guitars</a>,
                                                <a href="#">Band & Orchestra</a>,
                                                <a href="#">Bass Guitar</a>,
                                                <a href="#">Instruments</a>,
                                                <a href="#">Orchestral Strings</a>
                                            </span>
                                        </div>
                                        
                                        <div class="caja-tags-producto">
                                            <span class="links-tags-producto">Tags:
                                                <a href="#">sale</a>,
                                                <a href="#">company</a>,
                                                <a href="#">electric guitars</a>
                                            </span>
                                        </div>

                                    </div>
                                
                            </div>

                        </div>

                        <div class="vista-previa-de-la-card">

                            <article class="producto">

                                <a href="#">

                                    <div class="img-product-card">
                                        <img src=<%= products[0].imagen %> alt="Trompeta" >
                                    </div>

                                    <div class="detalle-producto">

                                        <div class="container-detalle">
                                            <div class="descripciones">
                                                <p><%= products[0].nombre %></p>
                                            </div>
                                            <span class="precios">$<%= products[0].precio %></span>
                                            <span class="descuentos"><%= products[0].descuento %>% off</span>
                                        </div>

                                    </div>

                                </a>

                            </article>
                        </div>

                    </div>

                </section>

            </section>

        </main>
            
        <!-- Footer -->
        <%- include("./partials/footer") %>
        <!-- /Footer -->

    </body>

</html>

